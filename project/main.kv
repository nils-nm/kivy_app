<InfoWindow>:
    name: "info"
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        BoxLayout:
    	    padding: 25
    	    spacing: 200
    	    size_hint: 1, .2

    	    Button:
    	        id: but_inf_bak
    		    text: '<--'
    		    size_hint: 1, .7
    		    pos_hint: {'x': 1, 'y': .25}
                on_release:
                    app.root.current = "choice"
                    root.manager.transition.direction = "right"
    	    Spinner:
    		    size_hint: 1, .7
    		    pos_hint: {'x': 1, 'y': .25}
    		    text: "---"
    		    values: "теория","примеры","практика","тематический калькулятор"
    		    on_text:
    		        root.spinner(self.text)

        Label:
    	    id: label
    	    text: ''
    	    size_hint: 1, .9

