WindowManager:
    FirstWindow:
    SecondWindow:

<FirstWindow>:
    name: "first"
    but: but
    lab: lab

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: lab
            text: "first window"
            font_size: "32sp"

        Button:
            id: but
            text: "next screen"
            font_size: "32sp"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"
<SecondWindow>:
    name: "second"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "second window"
            font_size: "32sp"

        Button:
            text: "go back"
            font_size: "32sp"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"
